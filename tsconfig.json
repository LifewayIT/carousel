{
  "compilerOptions": {
    "outDir": "./lib/",
    "incremental": true,
    "declaration": true,

    "target": "es5",
    "module": "commonjs",
    "jsx": "react",

    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "test"
  ]
}
